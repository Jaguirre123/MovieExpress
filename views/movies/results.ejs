<%- include("../_partials/header")%>
<div class="container-fluid">
    <h1>Search Results Page</h1>
    <div class="row mb-2">
        <% movies.forEach(function(movie) { %>
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <% if (movie.poster_path) { %>
                        <img class="card-img-top" src="https://image.tmdb.org/t/p/w500/<%= movie.poster_path %>" alt="Card image cap">
                    <% } else { %>
                        <img class="card-img-top noImgAv" src="https://i.imgur.com/lpb3wlX.jpg" alt="Card image cap">
                    <% } %>
                    <div class="card-body">
                        <p class="card-text text-truncate"><%= movie.title %></p>
                        <hr>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/movies/<%=movie.id%>" class="btn btn-sm btn-outline-secondary">View</a>
                            </div>
                            <% if (movie.vote_average >= 1) { %>
                                <small class="text-muted"><i class="fas fa-star"></i> <%= movie.vote_average %> / 10</small>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
<%- include("../_partials/footer")%>