<%- include("../_partials/header")%>

<section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Movie Express</h1>
          <p class="lead text-muted">blah blah</p>
          <p>
            <a href="#" class="btn btn-primary my-2">action</a>
            <a href="#" class="btn btn-secondary my-2">action</a>
          </p>
        </div>
</section>


<div class="row mb-2">
    <% movies.forEach(function(movie) { %>


        <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                  <img class="card-img-top" src="https://image.tmdb.org/t/p/w500/<%= movie.poster_path %>" alt="Card image cap">
                  <div class="card-body">
                    <p class="card-text"><b><%= movie.title %></b></p>
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                      </div>
                      <small class="text-muted"><i class="fas fa-star"></i> <%= movie.vote_average %> / 10</small>
                    </div>
                  </div>
                </div>
                </div>

    <% }) %>
</div>
 
<%- include("../_partials/footer")%>


