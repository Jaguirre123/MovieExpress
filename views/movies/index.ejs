<%- include("../_partials/header")%>
<div class="container-fluid">
    <center>
        <h1 class="mainH">Popular Movies</h1>
    </center>
    <hr>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <% nowPlaying.forEach(function(movie, index) { %>
                    <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" <%= !index ? ' class="active"' : '' %>></li>
                <% }); %>
                </ol>
                <div class="carousel-inner">
                    <% nowPlaying.forEach(function(movie, index) { %>
                        <div class="carousel-item <%= !index ? 'active' : '' %>">
                            <a href="/movies/<%=movie.id%>">
                                <img class="d-block w-100 caroImg" src="https://image.tmdb.org/t/p/w500/<%= movie.poster_path %>">
                            </a>
                        </div>
                    <% }); %>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
    </div>

    <center>
        <h1 class="mainH">Upcoming Movies</h1>
    </center>
    <hr>
    <div class="row mb-2">
        <% upcoming.forEach(function(movie) { %>
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="https://image.tmdb.org/t/p/w500/<%= movie.poster_path %>" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text text-truncate"><%= movie.title %></p>
                    <hr>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="/movies/<%=movie.id%>" class="btn btn-sm btn-outline-secondary">View</a>
                        </div>
                        <% if (movie.vote_average >= 1) { %>
                            <small class="text-muted">
                                <i class="fas fa-star"></i>
                                <%= movie.vote_average %> / 10
                            </small>
                        <% } %>
                    </div>
                </div>
            </div>
        </div> 
        <% }) %>
    </div>
</div>
<%- include("../_partials/footer")%>


