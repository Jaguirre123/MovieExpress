<div class="container-fluid">
    <div class="row content">
        <div class="col-sm-3 sidenav">
                <img src="<%= userShow.avatar %>" class="userAvatar">
            <br>
        </div>
      
        <div class="col-sm-9">
            <h2><small><%= userShow.name%>'s Favorites</small></h2>
            <hr>
            <div class="row mb-2">
                <% userShow.favorites.forEach(function(favorite) { %>               
                        <div class="col-md-4">
                            <div class="card mb-4 box-shadow">
                                <img class="card-img-top" src="https://image.tmdb.org/t/p/w500/<%= favorite.poster %>" alt="Card image cap">
                                <div class="card-body">
                                    <p class="card-text text-truncate"><%= favorite.title %></p>
                                    <hr>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a href="/movies/<%= favorite.apiId %>" class="btn btn-sm btn-outline-secondary">View</a>
                                            <form method="POST" action="/movies/favorites/<%= favorite._id %>?_method=DELETE">
                                                <input type="submit" class="btn btn-sm btn-outline-secondary" value="Delete">
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    
                    <% }); %>
            </div>
        </div>
    </div>
</div> 


